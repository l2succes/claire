{
  "expo": {
    "name": "WhatsApp AI Assistant",
    "slug": "whatsapp-ai-assistant",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.whatsappai.assistant",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for WhatsApp login."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.whatsappai.assistant",
      "permissions": ["CAMERA"]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow WhatsApp AI Assistant to access camera for QR code scanning."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "scheme": "whatsapp-ai"
  }
}